@{
    ViewData["Title"] = "Trang chủ";
}

<!-- HERO -->
<section class="relative min-h-[85vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-black via-gray-900 to-gray-800"></div>
    <div class="absolute inset-0 bg-black/40"></div>

    <div class="relative z-10 max-w-5xl mx-auto text-center px-6">
        <h1 class="text-5xl md:text-6xl font-extrabold text-white leading-tight mb-6">
            ShoesSport <br />
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-orange-400 to-red-500">
                Giày Thể Thao Chính Hãng
            </span>
        </h1>

        <p class="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto mb-10">
            Phong cách – Bền bỉ – Hiệu suất cao.
            Đồng hành cùng bạn trên mọi sân chơi.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/SanPhamKhachHang"
               class="px-8 py-4 rounded-full bg-white text-black font-semibold text-lg hover:bg-gray-200 transition">
                🛒 Mua sắm ngay
            </a>

            <a href="/Home/About"
               class="px-8 py-4 rounded-full bg-white/10 text-white border border-white/30 font-semibold text-lg hover:bg-white/20 transition">
                👟 Về ShoesSport
            </a>
        </div>
    </div>
</section>

<!-- FEATURES -->
<section class="py-20 bg-gray-100">
    <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-3xl font-bold text-center mb-12">
            Vì sao chọn ShoesSport?
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white p-8 rounded-xl shadow text-center">
                <div class="text-4xl mb-4">✅</div>
                <h3 class="text-xl font-semibold mb-2">Chính hãng 100%</h3>
                <p class="text-gray-600">
                    Cam kết sản phẩm chính hãng, đầy đủ tem mác.
                </p>
            </div>

            <div class="bg-white p-8 rounded-xl shadow text-center">
                <div class="text-4xl mb-4">🚚</div>
                <h3 class="text-xl font-semibold mb-2">Giao hàng nhanh</h3>
                <p class="text-gray-600">
                    Giao hàng toàn quốc, kiểm tra trước khi thanh toán.
                </p>
            </div>

            <div class="bg-white p-8 rounded-xl shadow text-center">
                <div class="text-4xl mb-4">💯</div>
                <h3 class="text-xl font-semibold mb-2">Đổi trả dễ dàng</h3>
                <p class="text-gray-600">
                    Hỗ trợ đổi trả nếu sản phẩm lỗi từ nhà sản xuất.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- CATEGORIES -->
<section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-3xl font-bold text-center mb-12">
            Danh mục nổi bật
        </h2>

        <div class="grid md:grid-cols-4 gap-6 text-center">
            <div class="border rounded-lg p-6 hover:shadow transition">
                <h3 class="text-lg font-semibold">⚽ Giày bóng đá</h3>
            </div>
            <div class="border rounded-lg p-6 hover:shadow transition">
                <h3 class="text-lg font-semibold">🏀 Giày bóng rổ</h3>
            </div>
            <div class="border rounded-lg p-6 hover:shadow transition">
                <h3 class="text-lg font-semibold">🏃 Giày chạy bộ</h3>
            </div>
            <div class="border rounded-lg p-6 hover:shadow transition">
                <h3 class="text-lg font-semibold">👟 Sneaker</h3>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="py-20 bg-gray-900 text-white text-center">
    <h2 class="text-3xl font-bold mb-4">
        Sẵn sàng nâng tầm phong cách?
    </h2>
    <p class="text-gray-300 mb-8">
        Khám phá bộ sưu tập giày thể thao mới nhất ngay hôm nay.
    </p>

    <a href="/SanPhamKhachHang"
       class="inline-block px-10 py-4 rounded-full bg-orange-500 text-white font-semibold text-lg hover:bg-orange-600 transition">
        Xem sản phẩm
    </a>
</section>
