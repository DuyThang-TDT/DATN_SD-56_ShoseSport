@model FurryFriends.Web.ViewModels.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FuryFriend - Đăng ký</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/css/dangkystyle.css" rel="stylesheet" />
    <style>
        /* ✅ Hệ thống thông báo đẹp */
        .notification-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            max-width: 400px;
        }

        /* ✅ Cải thiện thông báo popup */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
            padding: 0;
            margin: 10px 0;
            z-index: 1000;
            max-width: 400px;
            transform: translateX(100%);
            animation: slideInRight 0.5s ease forwards;
            border-left: 4px solid;
        }

        .notification.success {
            border-left-color: #10b981;
        }

        .notification.error {
            border-left-color: #ef4444;
        }

        .notification.warning {
            border-left-color: #f59e0b;
        }

        .notification.info {
            border-left-color: #3b82f6;
        }

        .notification-content {
            display: flex;
            align-items: center;
            padding: 16px 20px;
            gap: 12px;
        }

        .notification-icon {
            font-size: 20px;
            flex-shrink: 0;
        }

        .notification.success .notification-icon {
            color: #10b981;
        }

        .notification.error .notification-icon {
            color: #ef4444;
        }

        .notification.warning .notification-icon {
            color: #f59e0b;
        }

        .notification.info .notification-icon {
            color: #3b82f6;
        }

        .notification-message {
            flex: 1;
            color: #374151;
            font-size: 14px;
            line-height: 1.4;
            font-weight: 500;
        }

        .notification-close {
            background: none;
            border: none;
            color: #9ca3af;
            cursor: pointer;
            padding: 4px;
            border-radius: 6px;
            transition: all 0.2s ease;
            flex-shrink: 0;
        }

        .notification-close:hover {
            background: #f3f4f6;
            color: #6b7280;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .notification.hide {
            animation: slideOutRight 0.5s ease-in forwards;
        }

        @@keyframes slideOutRight {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }

        /* ✅ Thông báo inline trong form */
        .form-notification {
            margin-bottom: 20px;
            padding: 16px;
            border-radius: 12px;
            border: none;
            font-weight: 500;
            text-align: center;
            animation: fadeInUp 0.5s ease-out;
        }

        .form-notification.success {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
            border-left: 4px solid #10b981;
        }

        .form-notification.error {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
            border-left: 4px solid #ef4444;
        }

        .form-notification.warning {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
            border-left: 4px solid #f59e0b;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* ✅ Cải thiện validation messages */
        .field-validation-error {
            color: #ef4444;
            font-size: 12px;
            margin-top: 4px;
            display: block;
            animation: shake 0.5s ease-in-out;
        }

        .input-validation-error {
            border-color: #ef4444 !important;
            box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1) !important;
        }

        .input-validation-success {
            border-color: #10b981 !important;
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1) !important;
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        /* ✅ Loading state cho button */
        .signup-btn.loading {
            pointer-events: none;
            opacity: 0.7;
        }

        .signup-btn.loading .loading {
            display: inline-block;
        }

        .signup-btn.loading span:not(.loading) {
            display: none;
        }

        /* ✅ Password strength indicator */
        .password-strength {
            margin-top: 8px;
        }

        .strength-bar {
            height: 4px;
            background: #e5e7eb;
            border-radius: 2px;
            overflow: hidden;
        }

        .strength-fill {
            height: 100%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }

        .strength-weak { width: 25%; background: #ef4444; }
        .strength-fair { width: 50%; background: #f59e0b; }
        .strength-good { width: 75%; background: #10b981; }
        .strength-strong { width: 100%; background: #059669; }

        .strength-text {
            font-size: 12px;
            margin-top: 4px;
            font-weight: 500;
        }

        .strength-weak .strength-text { color: #ef4444; }
        .strength-fair .strength-text { color: #f59e0b; }
        .strength-good .strength-text { color: #10b981; }
        .strength-strong .strength-text { color: #059669; }

        /* ✅ Ẩn icon mật khẩu khi nhập */
        .password-toggle-icon.hidden {
            display: none !important;
        }

        /* ✅ Đảm bảo icon mật khẩu có thể click được */
        .password-toggle-icon {
            z-index: 10 !important;
            pointer-events: auto !important;
            user-select: none;
            cursor: pointer !important;
            transition: all 0.3s ease;
        }

        .password-toggle-icon:hover {
            color: #667eea !important;
            transform: scale(1.1);
        }

        /* ✅ Đảm bảo icon mật khẩu luôn ở trên cùng */
        .form-group {
            position: relative;
        }

        .form-group .password-toggle-icon {
            position: absolute !important;
            right: 16px !important;
            top: 38px !important;
            z-index: 1000 !important;
            pointer-events: all !important;
        }

        /* ✅ Ẩn icon mặc định của input password */
        input[type="password"]::-ms-reveal,
        input[type="password"]::-ms-clear {
            display: none;
        }

        /* ✅ Ẩn icon mặc định của input password trên Chrome/Safari */
        input[type="password"]::-webkit-credentials-auto-fill-button,
        input[type="password"]::-webkit-contacts-auto-fill-button {
            display: none;
        }
    </style>
</head>
<body>
    <div class="bg-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <!-- ✅ Container thông báo popup -->
    <div class="notification-container" id="notificationContainer"></div>

    <div class="signup-container">
        <div class="logo-section">
            <div class="logo">LittleFriend</div>
            <div class="subtitle">Cửa hàng thú cưng yêu thương</div>
        </div>
        <center><div class="welcome-text">Tạo tài khoản mới</div></center>
        
        <!-- ✅ Thông báo inline trong form -->
        @if (TempData["Success"] != null)
        {
            <div class="form-notification success" id="successMessage">
                <i class="bi bi-check-circle-fill"></i>
                @Html.Raw(TempData["Success"])
            </div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="form-notification error" id="errorMessage">
                <i class="bi bi-exclamation-triangle-fill"></i>
                @Html.Raw(ViewBag.Error)
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="form-notification warning" id="warningMessage">
                <i class="bi bi-exclamation-circle-fill"></i>
                @Html.Raw(TempData["Warning"])
            </div>
        }

        @using (Html.BeginForm("Register", "DangKy", FormMethod.Post, new { id = "signupForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="fullname">Họ và tên *</label>
                @Html.TextBoxFor(m => m.FullName, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "Nhập họ và tên đầy đủ" } })
                @Html.ValidationMessageFor(m => m.FullName, "", new Dictionary<string, object> { { "class", "field-validation-error" } })
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="username">Tài khoản *</label>
                    @Html.TextBoxFor(m => m.UserName, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "Tên đăng nhập" } })
                    @Html.ValidationMessageFor(m => m.UserName, "", new Dictionary<string, object> { { "class", "field-validation-error" } })
                </div>
                <div class="form-group">
                    <label for="phone">Số điện thoại *</label>
                    @Html.TextBoxFor(m => m.Phone, new Dictionary<string, object> { { "class", "form-control" }, { "type", "tel" }, { "placeholder", "0123456789" } })
                    @Html.ValidationMessageFor(m => m.Phone, "", new Dictionary<string, object> { { "class", "field-validation-error" } })
                </div>
            </div>
            <div class="form-group">
                <label for="email">Email *</label>
                @Html.TextBoxFor(m => m.Email, new Dictionary<string, object> { { "class", "form-control" }, { "type", "email" }, { "placeholder", "example@email.com" } })
                @Html.ValidationMessageFor(m => m.Email, "", new Dictionary<string, object> { { "class", "field-validation-error" } })
            </div>
            <div class="form-group" style="position: relative;">
                <label for="password">Mật khẩu *</label>
                @Html.PasswordFor(m => m.Password, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "Tối thiểu 6 ký tự" } })
                <i class="bi bi-eye password-toggle-icon" onclick="togglePassword1()" id="toggleIcon1" style="position: absolute; right: 16px; top: 38px; cursor: pointer; color: #888; display: block;"></i>
                <div class="password-strength">
                    <div class="strength-bar">
                        <div class="strength-fill" id="strengthFill"></div>
                    </div>
                    <div id="strengthText" class="strength-text"></div>
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new Dictionary<string, object> { { "class", "field-validation-error" } })
            </div>
            <div class="form-group" style="position: relative;">
                <label for="confirmPassword">Xác nhận mật khẩu *</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "Nhập lại mật khẩu" } })
                <i class="bi bi-eye password-toggle-icon" onclick="togglePassword2()" id="toggleIcon2" style="position: absolute; right: 16px; top: 38px; cursor: pointer; color: #888; display: block;"></i>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new Dictionary<string, object> { { "class", "field-validation-error" } })
            </div>
            <div class="terms-checkbox">
                @Html.CheckBoxFor(m => m.AgreeTerms, new Dictionary<string, object> { { "class", "form-check-input" } })
                <label for="terms">
                    Tôi đồng ý với <a href="#" onclick="showTerms()">Điều khoản dịch vụ</a> và
                    <a href="#" onclick="showPrivacy()">Chính sách bảo mật</a> của FuryFriend
                </label>
                @Html.ValidationMessageFor(m => m.AgreeTerms, "", new Dictionary<string, object> { { "class", "field-validation-error" } })
            </div>
            <button type="submit" class="signup-btn" id="signupBtn">
                <span class="loading"></span>
                Tạo tài khoản
            </button>
        }

        <div class="login-link">
            Đã có tài khoản? <a asp-action="DangNhap" asp-controller="KhachHangLogin" onclick="showLogin()">Đăng nhập ngay</a>
        </div>
    </div>

    <script src="~/js/dangkyscript.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // ✅ Hàm hiển thị thông báo popup
        function showNotification(message, type = 'info') {
            const container = document.getElementById('notificationContainer');
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            
            const icons = {
                success: 'bi-check-circle-fill',
                error: 'bi-exclamation-triangle-fill',
                warning: 'bi-exclamation-circle-fill',
                info: 'bi-info-circle-fill'
            };
            
            notification.innerHTML = `
                <div class="notification-content">
                    <i class="bi ${icons[type]} notification-icon"></i>
                    <div class="notification-message">${message}</div>
                    <button class="notification-close" onclick="this.parentElement.remove()">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            `;
            
            container.appendChild(notification);
            
            // Tự động ẩn sau 5 giây
            setTimeout(() => {
                notification.classList.add('hide');
                setTimeout(() => notification.remove(), 500);
            }, 5000);
        }

        // ✅ Cải thiện password strength indicator
        function checkPasswordStrength(password) {
            let strength = 0;
            let feedback = '';
            
            if (password.length >= 6) strength++;
            if (password.match(/[a-z]/)) strength++;
            if (password.match(/[A-Z]/)) strength++;
            if (password.match(/[0-9]/)) strength++;
            if (password.match(/[^a-zA-Z0-9]/)) strength++;
            
            const strengthFill = document.getElementById('strengthFill');
            const strengthText = document.getElementById('strengthText');
            
            if (strength <= 1) {
                strengthFill.className = 'strength-fill strength-weak';
                strengthText.textContent = 'Yếu';
                strengthText.className = 'strength-text strength-weak';
            } else if (strength <= 2) {
                strengthFill.className = 'strength-fill strength-fair';
                strengthText.textContent = 'Trung bình';
                strengthText.className = 'strength-text strength-fair';
            } else if (strength <= 3) {
                strengthFill.className = 'strength-fill strength-good';
                strengthText.textContent = 'Tốt';
                strengthText.className = 'strength-text strength-good';
            } else {
                strengthFill.className = 'strength-fill strength-strong';
                strengthText.textContent = 'Mạnh';
                strengthText.className = 'strength-text strength-strong';
            }
        }

        // ✅ Cải thiện form validation
        $(document).ready(function() {
            // Password strength check
            $('#Password').on('input', function() {
                checkPasswordStrength(this.value);
            });

            // Real-time validation feedback
            $('input').on('blur', function() {
                if (this.checkValidity()) {
                    $(this).removeClass('input-validation-error').addClass('input-validation-success');
                } else {
                    $(this).removeClass('input-validation-success').addClass('input-validation-error');
                }
            });

            // Xử lý form submit
            $('#signupForm').on('submit', function(e) {
                // Nếu có thông báo lỗi từ server, hiển thị nó
                const errorMessage = $('.form-notification.error').text();
                if (errorMessage && errorMessage.trim()) {
                    showNotification(errorMessage, 'error');
                }
                
                // Hiển thị loading state
                const submitBtn = $('#signupBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="bi bi-arrow-clockwise spin"></i> Đang xử lý...');
                
                // Form sẽ submit bình thường
            });
        });

        // Kiểm tra nếu có thông báo lỗi từ ViewBag khi trang load
        $(document).ready(function() {
            const errorMessage = $('.form-notification.error').text();
            if (errorMessage && errorMessage.trim()) {
                showNotification(errorMessage, 'error');
            }
            
            // ✅ Xử lý ẩn/hiện icon mật khẩu
            setupPasswordIconToggle();
        });

        // ✅ Hàm toggle password đơn giản như trang đăng nhập
        function togglePassword1() {
            const passwordInput = document.getElementById('Password');
            const toggleIcon = document.getElementById('toggleIcon1');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'bi bi-eye-slash password-toggle-icon';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'bi bi-eye password-toggle-icon';
            }
        }

        function togglePassword2() {
            const passwordInput = document.getElementById('ConfirmPassword');
            const toggleIcon = document.getElementById('toggleIcon2');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'bi bi-eye-slash password-toggle-icon';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'bi bi-eye password-toggle-icon';
            }
        }

        // ✅ Hàm xử lý ẩn/hiện icon mật khẩu
        function setupPasswordIconToggle() {
            const passwordFields = ['Password', 'ConfirmPassword'];
            
            passwordFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                const icon = document.getElementById(fieldId === 'Password' ? 'toggleIcon1' : 'toggleIcon2');
                
                if (field && icon) {
                    console.log(`Setting up password toggle for ${fieldId}:`, field, icon);
                    
                    // Ẩn icon khi có nội dung
                    if (field.value.length > 0) {
                        icon.classList.add('hidden');
                    }
                    
                    // Xử lý sự kiện input
                    field.addEventListener('input', function() {
                        if (this.value.length > 0) {
                            icon.classList.add('hidden');
                        } else {
                            icon.classList.remove('hidden');
                        }
                    });
                    
                    // Xử lý sự kiện focus (hiện icon nếu trống)
                    field.addEventListener('focus', function() {
                        if (this.value.length === 0) {
                            icon.classList.remove('hidden');
                        }
                    });
                }
            });
        }

        // ✅ Tự động ẩn thông báo inline (chỉ success và warning, không ẩn error)
        setTimeout(function() {
            const successNotifications = document.querySelectorAll('.form-notification.success, .form-notification.warning');
            successNotifications.forEach(notification => {
                notification.style.opacity = '0';
                notification.style.transform = 'translateY(-20px)';
                setTimeout(() => notification.remove(), 300);
            });
        }, 5000);

        // ✅ Các hàm tiện ích
        function showTerms() {
            showNotification('Điều khoản dịch vụ sẽ được hiển thị ở đây!', 'info');
        }

        function showPrivacy() {
            showNotification('Chính sách bảo mật sẽ được hiển thị ở đây!', 'info');
        }

        function showLogin() {
            // Chuyển hướng đến trang đăng nhập
        }
    </script>
</body>
</html>