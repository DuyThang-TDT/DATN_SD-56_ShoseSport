            flex: 1;
            height: 1px;
            background: #e1e5e9;
        }

        .divider span {
            padding: 0 16px;
        }

        .social-login {
            display: flex;
            gap: 12px;
            margin-bottom: 24px;
        }

        .social-btn {
            flex: 1;
            padding: 12px;
            border: 2px solid #e1e5e9;
            border-radius: 12px;
            background: white;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 20px;
            text-align: center;
        }

        .social-btn:hover {
            border-color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .signup-link {
            text-align: center;
            color: #666;
            font-size: 14px;
        }

        .signup-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .signup-link a:hover {
            color: #764ba2;
        }

        .walking-cat {
            position: absolute;
            top: -45px;
            width: 80px;
            height: 55px;
            animation: catWalk 12s ease-in-out infinite;
            z-index: 10;
        }

        .walking-cat img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        @@keyframes catWalk {
            0% {
                left: 20px;
                transform: scaleX(1);
            }
            45% {
                left: calc(100% - 100px);
                transform: scaleX(1);
            }
            50% {
                left: calc(100% - 100px);
                transform: scaleX(-1);
            }
            95% {
                left: 20px;
                transform: scaleX(-1);
            }
            100% {
                left: 20px;
                transform: scaleX(1);
            }
        }

        /* Responsive design */
        @@media (max-width: 480px) {
            .login-container {
                margin: 20px;
                padding: 30px 20px;
            }
            
            .logo {
                font-size: 28px;
            }
            
            .welcome-text {
                font-size: 20px;
            }
        }

        /* Loading animation */
        .loading {
            display: none;
            width: 20px;
            height: 20px;
            border: 2px solid #ffffff;
            border-top: 2px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 10px;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* ‚úÖ H·ªá th·ªëng th√¥ng b√°o ƒë·∫πp */
        .notification-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            max-width: 400px;
        }

        /* ‚úÖ C·∫£i thi·ªán th√¥ng b√°o popup */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
            padding: 0;
            margin: 10px 0;
            z-index: 1000;
            max-width: 400px;
            transform: translateX(100%);
            animation: slideInRight 0.5s ease forwards;
            border-left: 4px solid;
        }

        .notification.success {
            border-left-color: #10b981;
        }

        .notification.error {
            border-left-color: #ef4444;
        }

        .notification.warning {
            border-left-color: #f59e0b;
        }

        .notification.info {
            border-left-color: #3b82f6;
        }

        .notification-content {
            display: flex;
            align-items: center;
            padding: 16px 20px;
            gap: 12px;
        }

        .notification-icon {
            font-size: 20px;
            flex-shrink: 0;
        }

        .notification.success .notification-icon {
            color: #10b981;
        }

        .notification.error .notification-icon {
            color: #ef4444;
        }

        .notification.warning .notification-icon {
            color: #f59e0b;
        }

        .notification.info .notification-icon {
            color: #3b82f6;
        }

        .notification-message {
            flex: 1;
            color: #374151;
            font-size: 14px;
            line-height: 1.4;
            font-weight: 500;
        }

        .notification-close {
            background: none;
            border: none;
            color: #9ca3af;
            cursor: pointer;
            padding: 4px;
            border-radius: 6px;
            transition: all 0.2s ease;
            flex-shrink: 0;
        }

        .notification-close:hover {
            background: #f3f4f6;
            color: #6b7280;
        }

        .notification.hide {
            animation: slideOutRight 0.5s ease forwards;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @@keyframes slideOutRight {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }

        /* ‚úÖ Th√¥ng b√°o inline trong form */
        .form-notification {
            margin-bottom: 20px;
            padding: 16px;
            border-radius: 12px;
            border: none;
            font-weight: 500;
            text-align: center;
            animation: fadeInUp 0.5s ease-out;
        }

        .form-notification.success {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
            border-left: 4px solid #10b981;
        }

        .form-notification.error {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
            border-left: 4px solid #ef4444;
        }

        .form-notification.warning {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
            border-left: 4px solid #f59e0b;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* ‚úÖ C·∫£i thi·ªán validation messages */
        .field-validation-error {
            color: #ef4444;
            font-size: 12px;
            margin-top: 4px;
            display: block;
            animation: shake 0.5s ease-in-out;
        }

        .input-validation-error {
            border-color: #ef4444 !important;
            box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1) !important;
        }

        .input-validation-success {
            border-color: #10b981 !important;
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1) !important;
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        /* ‚úÖ Loading state cho button */
        .login-btn.loading {
            pointer-events: none;
            opacity: 0.7;
        }

        .login-btn.loading .loading {
            display: inline-block;
        }

        .login-btn.loading span:not(.loading) {
            display: none;
        }
    </style>
</head>
<body>
    <div class="bg-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <!-- ‚úÖ Container th√¥ng b√°o popup -->
    <div class="notification-container" id="notificationContainer"></div>

    <div class="login-container">
        <div class="walking-cat">
            <img src="https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExdHBtcjdycHN5YjNrZmpqcHM3Zm1wN3hsbm84aTU3d3M4cTJsMmRxdyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/jlw3OMYrH6mb4loQJI/giphy.gif" alt="Walking Cat">
        </div>
        <div class="logo-section">
                            <div class="logo">ƒêƒÉng nh·∫≠p v√†o Qu·∫£n L√Ω - FuryFriend</div>
            <div class="subtitle">C·ª≠a h√†ng th√∫ c∆∞ng y√™u th∆∞∆°ng</div>
        </div>
        <p style="color: #666; margin-bottom: 24px; font-size: 14px;">ƒêƒÉng nh·∫≠p ƒë·ªÉ truy c·∫≠p h·ªá th·ªëng qu·∫£n l√Ω</p>
        
        <!-- ‚úÖ Th√¥ng b√°o inline trong form -->
        @if (TempData["Success"] != null)
        {
            <div class="form-notification success" id="successMessage">
                <i class="bi bi-check-circle-fill"></i>
                @Html.Raw(TempData["Success"])
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="form-notification warning" id="warningMessage">
                <i class="bi bi-exclamation-circle-fill"></i>
                @Html.Raw(TempData["Warning"])
            </div>
        }

        <form asp-action="DangNhap" method="post" id="loginForm">
            <div class="form-group">
                <label for="UserName">T√†i Kho·∫£n</label>
                <input asp-for="UserName" class="form-control" placeholder="Nh·∫≠p t√†i kho·∫£n" required />
                <span asp-validation-for="UserName" class="field-validation-error"></span>
            </div>
            <div class="form-group" style="position: relative;">
                <label for="Password">M·∫≠t kh·∫©u</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nh·∫≠p m·∫≠t kh·∫©u" required />
                <i class="bi bi-eye password-toggle" onclick="togglePassword()" id="toggleIcon"></i>
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>
            <div class="forgot-password">
                <a asp-controller="Account" asp-action="ForgotPassword">Qu√™n m·∫≠t kh·∫©u?</a>
            </div>
            <button type="submit" class="login-btn" id="loginBtn">
                <span class="loading"></span>
                ƒêƒÉng nh·∫≠p
            </button>
        </form>

        <!-- ‚úÖ Th√¥ng b√°o popup ƒë·∫πp -->
        @if (TempData["Success"] != null)
        {
            <div class="notification success" id="popupSuccess">
                <div class="notification-content">
                    <i class="bi bi-check-circle-fill notification-icon"></i>
                    <div class="notification-message">@Html.Raw(TempData["Success"])</div>
                    <button class="notification-close" onclick="closeNotification('popupSuccess')">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="notification error" id="popupError">
                <div class="notification-content">
                    <i class="bi bi-exclamation-triangle-fill notification-icon"></i>
                    <div class="notification-message">@Html.Raw(TempData["Error"])</div>
                    <button class="notification-close" onclick="closeNotification('popupError')">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="notification warning" id="popupWarning">
                <div class="notification-content">
                    <i class="bi bi-exclamation-circle-fill notification-icon"></i>
                    <div class="notification-message">@Html.Raw(TempData["Warning"])</div>
                    <button class="notification-close" onclick="closeNotification('popupWarning')">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            </div>
        }
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // ‚úÖ H√†m hi·ªÉn th·ªã th√¥ng b√°o popup
        function showNotification(message, type = 'info') {
            const container = document.getElementById('notificationContainer');
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            
            const icons = {
                success: 'bi-check-circle-fill',
                error: 'bi-exclamation-triangle-fill',
                warning: 'bi-exclamation-circle-fill',
                info: 'bi-info-circle-fill'
            };
            
            notification.innerHTML = `
                <i class="bi ${icons[type]} notification-icon"></i>
                <div class="notification-message">${message}</div>
                <button class="notification-close" onclick="this.parentElement.remove()">
                    <i class="bi bi-x"></i>
                </button>
            `;
            
            container.appendChild(notification);
            
            // T·ª± ƒë·ªông ·∫©n sau 5 gi√¢y
            setTimeout(() => {
                notification.classList.add('hide');
                setTimeout(() => notification.remove(), 500);
            }, 5000);
        }

        function togglePassword() {
            var passwordInput = document.querySelector('input[name="Password"]');
            var icon = document.getElementById('toggleIcon');
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = "password";
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        // ‚úÖ C·∫£i thi·ªán form validation
        $(document).ready(function() {
            // Real-time validation feedback
            $('input').on('blur', function() {
                if (this.checkValidity()) {
                    $(this).removeClass('input-validation-error').addClass('input-validation-success');
                } else {
                    $(this).removeClass('input-validation-success').addClass('input-validation-error');
                }
            });

            // Form submission
            $('#loginForm').on('submit', function(e) {
                const btn = $('#loginBtn');
                btn.addClass('loading');
                
                // Ki·ªÉm tra validation
                if (!this.checkValidity()) {
                    e.preventDefault();
                    btn.removeClass('loading');
                    showNotification('Vui l√≤ng ki·ªÉm tra l·∫°i th√¥ng tin!', 'warning');
                    return false;
                }
                
                // N·∫øu c√≥ th√¥ng b√°o l·ªói t·ª´ server, hi·ªÉn th·ªã n√≥
                const errorMessage = $('.form-notification.error').text();
                if (errorMessage && errorMessage.trim()) {
                    showNotification(errorMessage, 'error');
                }
            });
        });

        // ‚úÖ T·ª± ƒë·ªông ·∫©n th√¥ng b√°o inline (ch·ªâ success v√† warning, kh√¥ng ·∫©n error)
        setTimeout(function() {
            const successNotifications = document.querySelectorAll('.form-notification.success, .form-notification.warning');
            successNotifications.forEach(notification => {
                notification.style.opacity = '0';
                notification.style.transform = 'translateY(-20px)';
                setTimeout(() => notification.remove(), 300);
            });
        }, 5000);

        // ‚úÖ ƒê√≥ng th√¥ng b√°o popup
        function closeNotification(id) {
            const notification = document.getElementById(id);
            if (notification) {
                notification.classList.add('hide');
                setTimeout(() => notification.remove(), 500);
            }
        }

        // ‚úÖ T·ª± ƒë·ªông ·∫©n popup (ch·ªâ success v√† warning, kh√¥ng ·∫©n error)
        setTimeout(function() {
            const successPopups = document.querySelectorAll('.notification.success, .notification.warning, .notification.info');
            successPopups.forEach(popup => {
                popup.classList.add('hide');
                setTimeout(() => popup.remove(), 500);
            });
        }, 8000);

        // ‚úÖ C√°c h√†m ti·ªán √≠ch
        function showForgotPassword() {
            showNotification('Ch·ª©c nƒÉng qu√™n m·∫≠t kh·∫©u s·∫Ω ƒë∆∞·ª£c tri·ªÉn khai sau! üêæ', 'info');
        }
    </script>

    @section Scripts { }
</body>
