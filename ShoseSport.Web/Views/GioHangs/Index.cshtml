@model FurryFriends.API.Models.DTO.GioHangDTO
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "_Layout";
    var selectedVoucherIdObj = ViewBag.VoucherId;
    var selectedVoucherId = selectedVoucherIdObj is Guid ? (Guid?)selectedVoucherIdObj : null;
    var selectedVoucherIdStr = selectedVoucherIdObj != null ? selectedVoucherIdObj.ToString() : "";
    var tienSauGiam = ViewBag.TienSauGiam as decimal?;
    var giamGia = ViewBag.GiamGia as decimal?;
    var phiVanChuyen = ViewBag.PhiVanChuyen as decimal?;
    var tongDonHang = ViewBag.TongDonHang as decimal?;
    var tenVoucher = ViewBag.TenVoucher as string;
    var maVoucher = ViewBag.MaVoucher as string;
    var danhSachVouchers = ViewBag.Vouchers as IEnumerable<FurryFriends.API.Models.Voucher>;
    var items = Model?.ChiTietGioHang ?? new List<FurryFriends.API.Models.DTO.GioHangChiTietDTO>();
    decimal subTotal = items.Sum(x => x.ThanhTien);

    // Sử dụng thông tin từ ViewBag nếu có, nếu không thì tính mặc định
    decimal shipping = phiVanChuyen ?? (subTotal >= 500000 ? 0 : 30000);
    decimal grandTotal = tienSauGiam.HasValue ? tienSauGiam.Value : (subTotal + shipping);
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Loi"]
        </div>
    }

}

