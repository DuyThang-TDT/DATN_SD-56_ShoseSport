<div class="cart-container">
    <div class="cart-header">
        <h1><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h1>
        <p class="opacity-90">Kiểm tra sản phẩm và tiến hành thanh toán</p>
    </div>

    <div class="cart-content">
        @if (Model == null || Model.ChiTietGioHang == null || !Model.ChiTietGioHang.Any())
        {
            <div class="empty-cart text-center p-10 bg-[var(--light-bg)] rounded-2xl">
                <i class="fas fa-shopping-cart text-5xl text-[var(--primary-color)] mb-4"></i>
                <h3 class="text-2xl font-bold text-[var(--dark-text)] mb-2">Giỏ hàng trống</h3>
                <p class="text-gray-500 mb-6">Hãy khám phá thêm sản phẩm thú vị dành cho thú cưng của bạn.</p>
                <a href="@Url.Action("Index", "SanPhamKhachHang")" class="px-6 py-3 rounded-xl text-white font-semibold" style="background:var(--gradient-primary)">Tiếp tục mua sắm</a>
            </div>
        }
        else
        {
            <div class="cart-grid" id="cartGrid">
                <div>
                    <div class="cart-items">
                        <div class="cart-items-header">
                            <span><i class="fas fa-list-ul"></i> Sản phẩm (@Model.ChiTietGioHang.Count() mục)</span>
                            <a href="@Url.Action("Index", "SanPhamKhachHang")" class="text-white/90 hover:text-white"><i class="fas fa-plus-circle"></i> Thêm sản phẩm</a>
                        </div>
                        @foreach (var item in Model.ChiTietGioHang)
                        {
                            <div class="cart-item">
                                <img src="@($"https://localhost:7289/images/{System.IO.Path.GetFileName(item.AnhSanPham ?? "")}")" class="product-image" alt="@item.TenSanPham" />
                                <div>
                                    <div class="product-title-container" data-full-title="@item.TenSanPham">
                                        <div class="product-title">@item.TenSanPham</div>
                                    </div>
                                    <div class="product-meta">Màu: @item.MauSac | Size: @item.KichCo</div>
                                </div>
                                <div class="text-center">
                                    @if (item.GiaGoc > 0 && item.GiaGoc != item.DonGia)
                                    {
                                        <div class="line-through">@item.GiaGoc.ToString("N0") VNĐ</div>
                                    }
                                    <div class="price-display">@item.DonGia.ToString("N0") VNĐ</div>
                                </div>
                                <div class="text-center">
                                    <input type="number" value="@item.SoLuong" min="1" class="quantity-input" data-id="@item.GioHangChiTietId" onchange="updateQuantity('@item.GioHangChiTietId', this.value)" style="width:90px; text-align:center; border:2px solid var(--border-color); border-radius:12px; padding:.5rem; font-weight:700;" />
                                </div>
                                <div class="text-center">
                                    <div class="price-display item-total" data-id="@item.GioHangChiTietId">@item.ThanhTien.ToString("N0") VNĐ</div>
                                </div>
                                <div class="text-center flex justify-start items-center">
                                    <form asp-action="Remove" method="post" class="inline-block">
                                        <input type="hidden" name="chiTietId" value="@item.GioHangChiTietId" />
                                        <input type="hidden" name="voucherId" value="@selectedVoucherId" />
                                        <button type="submit" class="px-4 py-3 rounded-xl text-white" style="background:var(--gradient-danger); display:inline-flex; align-items:center; justify-content:center;" title="Xóa sản phẩm" onclick="return confirm('Xóa sản phẩm này?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <aside>
                    <div class="summary-card">
                        <div class="summary-header"><i class="fas fa-receipt"></i> Thông tin đơn hàng</div>
                        <div class="summary-body">
                            <div class="section">
                                <div class="section-title">
                                    <div><i class="fas fa-location-dot"></i> Địa chỉ giao hàng</div>
                                    @if(ViewBag.KhachHangId != null && ViewBag.KhachHangId != Guid.Empty)
                                    {
                                        <button id="btnChooseAddress" type="button" class="action" onclick="(function(){var m=document.getElementById('addressModal'); if(!m) return; m.classList.add('show'); m.style.display='block'; m.removeAttribute('aria-hidden');})(); return false;"><i class="fas fa-location-dot"></i> Thay đổi</button>
                                    }
                                </div>
                                <div id="shippingAddressText" class="address-box">
                                    @{
                                        if (ViewBag.KhachHangId != null && ViewBag.KhachHangId != Guid.Empty)
                                        {
                                            var dcs = (IEnumerable<FurryFriends.API.Models.DiaChiKhachHang>)(ViewBag.DiaChis ?? new List<FurryFriends.API.Models.DiaChiKhachHang>());
                                            var macDinh = dcs.FirstOrDefault(x => x.TrangThai == 1);
