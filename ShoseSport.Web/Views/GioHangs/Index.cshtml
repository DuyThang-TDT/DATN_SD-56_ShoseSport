@section Scripts {
    <script>
        // Expose to global for inline onchange calls
        window.updateQuantity = function(id, qty){
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/GioHangs/UpdateQuantity';
            const inputId = document.createElement('input'); inputId.type='hidden'; inputId.name='chiTietId'; inputId.value=id; form.appendChild(inputId);
            const inputQty = document.createElement('input'); inputQty.type='hidden'; inputQty.name='soLuong'; inputQty.value=parseInt(qty||1); form.appendChild(inputQty);
            const inputVoucher = document.createElement('input'); inputVoucher.type='hidden'; inputVoucher.name='voucherId'; inputVoucher.value='@selectedVoucherId'; form.appendChild(inputVoucher);
            document.body.appendChild(form);
            form.submit();
        };

        function openAddressModal(){
            const addressModalEl = document.getElementById('addressModal');
            if (!addressModalEl) return;
            if (window.bootstrap && bootstrap.Modal) {
                const instance = bootstrap.Modal.getOrCreateInstance(addressModalEl, { backdrop: 'static' });
                instance.show();
            } else {
                addressModalEl.classList.add('show');
                addressModalEl.style.display = 'block';
                addressModalEl.removeAttribute('aria-hidden');
            }
        }

        document.addEventListener('DOMContentLoaded', function(){
            // ✅ Tự động điều chỉnh font size cho tên sản phẩm khi trang load
            adjustProductTitleFontSize();
            
            // ✅ Khởi tạo tooltip tùy chỉnh
            initCustomTooltips();
            
            // ✅ Điều chỉnh lại khi resize window
            window.addEventListener('resize', function() {
                adjustProductTitleFontSize();
            });
            
            // Đồng bộ badge giỏ hàng thực tế mỗi khi vào trang này
            if (window.refreshCartCount) window.refreshCartCount();

            // Tự động cập nhật số lượng sau 400ms khi người dùng dừng gõ
            const debounce = (fn, delay = 400) => { let t; return (...args) => { clearTimeout(t); t = setTimeout(() => fn(...args), delay); }; };

            function updateQuantity(id, qty){
                // Gọi qua MVC controller để luôn đúng base URL, tránh CORS/API port
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/GioHangs/UpdateQuantity';
                const inputId = document.createElement('input'); inputId.type='hidden'; inputId.name='chiTietId'; inputId.value=id; form.appendChild(inputId);
                const inputQty = document.createElement('input'); inputQty.type='hidden'; inputQty.name='soLuong'; inputQty.value=parseInt(qty||1); form.appendChild(inputQty);
                const inputVoucher = document.createElement('input'); inputVoucher.type='hidden'; inputVoucher.name='voucherId'; inputVoucher.value='@selectedVoucherId'; form.appendChild(inputVoucher);
                document.body.appendChild(form);
                form.submit();
            }

            document.querySelectorAll('.quantity-input').forEach(inp=>{
                const id = inp.dataset.id;
                const handler = debounce(()=> updateQuantity(id, inp.value));
                inp.addEventListener('input', handler);
                inp.addEventListener('change', ()=> updateQuantity(id, inp.value));
            });

            // đã bỏ nút sync; tự động cập nhật khi thay đổi số lượng

            // Modal địa chỉ
            const addressModalEl = document.getElementById('addressModal');
            let addressModalInstance = null;
            const hideModal = ()=>{
                if (!addressModalEl) return;
                if (window.bootstrap && bootstrap.Modal) {
                    addressModalInstance?.hide();
                } else {
                    addressModalEl.classList.remove('show');
                    addressModalEl.style.display = 'none';
                    addressModalEl.setAttribute('aria-hidden','true');
                }
            };
            document.getElementById('btnSelectAddressConfirm')?.addEventListener('click', ()=>{
                const checked = document.querySelector("input[name='diaChiRadio']:checked");
                if(!checked){ return; }
                const item = checked.closest('.address-item');
                const text = item?.querySelector('.address-line')?.textContent || '';
                const name = item?.querySelector('.address-name')?.textContent || '';
                document.getElementById('shippingAddressText').textContent = `${name} - ${text}`;
                // set hidden
                const hid = document.getElementById('diaChiIdHidden'); if (hid) hid.value = checked.value;
                const hid2 = document.getElementById('diaChiIdHidden_2'); if (hid2) hid2.value = checked.value;
                hideModal();
            });

            // Set mặc định từ radio đang checked (địa chỉ mặc định) ngay khi load
            const checkedRadio = document.querySelector("input[name='diaChiRadio']:checked");
            if (checkedRadio) {
                const hid = document.getElementById('diaChiIdHidden'); if (hid) hid.value = checkedRadio.value;
                const hid2 = document.getElementById('diaChiIdHidden_2'); if (hid2) hid2.value = checkedRadio.value;
            }

            // Cập nhật hidden ngay khi người dùng thay đổi lựa chọn trong modal
            document.querySelectorAll("input[name='diaChiRadio']").forEach(r => {
                r.addEventListener('change', () => {
                    const hid = document.getElementById('diaChiIdHidden'); if (hid) hid.value = r.value;
                    const hid2 = document.getElementById('diaChiIdHidden_2'); if (hid2) hid2.value = r.value;
                });
            });

            // Voucher functionality
            let currentCartTotal = @(subTotal.ToString("F0", System.Globalization.CultureInfo.InvariantCulture));
            let selectedVoucherId = null;

            // Apply voucher
            document.getElementById('btnApplyVoucher')?.addEventListener('click', async function() {
                const code = (document.getElementById('voucherInput')?.value || '').trim();
                const btn = this;
                const originalText = btn.innerHTML;

                if (!code) {
                    showVoucherResult(false, 'Vui lòng nhập mã voucher');
                    return;
                }

                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Kiểm tra...';
                btn.disabled = true;

                try {
                    const response = await fetch('https://localhost:7289/api/VoucherValidation/validate', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'X-Requested-With': 'XMLHttpRequest' },
                        body: JSON.stringify({
                            voucherCode: code,
                            tongTienHang: currentCartTotal
                        })
                    });

                    const result = await response.json();

                    if (result.success) {
                        selectedVoucherId = result.voucherId;
                        const sel = document.getElementById('selectedVoucherId');
                        if (sel) sel.value = result.voucherId;
                        const hidden = document.getElementById('voucherIdHidden');
                        if (hidden) hidden.value = result.voucherId;
                        showVoucherResult(true, result.message);
                        // Reload trang với voucherId để server tính lại tổng
                        const url = new URL(window.location.href);
                        url.searchParams.set('voucherId', result.voucherId);
                        window.location.href = url.toString();
                    } else {
                        selectedVoucherId = null;
                        const sel = document.getElementById('selectedVoucherId');
                        if (sel) sel.value = '';
                        showVoucherResult(false, result.message);
                        // Loại bỏ voucherId khỏi URL nếu đang có để không áp dụng sai
                        const url = new URL(window.location.href);
                        if (url.searchParams.has('voucherId')) {
                            url.searchParams.delete('voucherId');
                            window.location.href = url.toString();
                        }
                    }
                } catch (error) {
                    showVoucherResult(false, 'Có lỗi xảy ra khi kiểm tra voucher');
                } finally {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            });

            // Show available vouchers
            document.getElementById('btnShowAvailableVouchers')?.addEventListener('click', function() {
                showAvailableVouchers();
            });

            function showVoucherResult(success, message) {
                const resultDiv = document.getElementById('voucherResult');
                const successDiv = document.getElementById('voucherSuccess');
                const errorDiv = document.getElementById('voucherError');
                const successText = document.getElementById('voucherSuccessText');
                const errorText = document.getElementById('voucherErrorText');

                resultDiv.style.display = 'block';

                if (success) {
                    successDiv.style.display = 'block';
                    errorDiv.style.display = 'none';
                    successText.textContent = message;
                } else {
                    successDiv.style.display = 'none';
                    errorDiv.style.display = 'block';
                    errorText.textContent = message;
                }
            }

            async function showAvailableVouchers() {
                const modalEl = document.getElementById('voucherModal');
                if (window.bootstrap && bootstrap.Modal) {
                    const modal = new bootstrap.Modal(modalEl);
                    modal.show();
                } else {
                    // Fallback nếu thiếu Bootstrap JS
                    modalEl.style.display = 'block';
                    modalEl.classList.add('show');
                    modalEl.removeAttribute('aria-hidden');
                }

                document.getElementById('voucherLoadingState').style.display = 'block';
                document.getElementById('voucherList').style.display = 'none';
                document.getElementById('voucherEmptyState').style.display = 'none';

                try {
                    const khachHangId = '@(ViewBag.KhachHangId ?? Guid.Empty)';
                    const response = await fetch(`https://localhost:7289/api/VoucherValidation/available/${khachHangId}?tongTienHang=${currentCartTotal}`, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                    const result = await response.json();

                    document.getElementById('voucherLoadingState').style.display = 'none';

                    if (result.success && result.vouchers.length > 0) {
                        displayVoucherList(result.vouchers);
                    } else {
                        document.getElementById('voucherEmptyState').style.display = 'block';
                    }
                } catch (error) {
                    document.getElementById('voucherLoadingState').style.display = 'none';
                    document.getElementById('voucherEmptyState').style.display = 'block';
                }
            }

            function displayVoucherList(vouchers) {
                const container = document.getElementById('voucherList');
                container.innerHTML = '';

                vouchers.forEach(voucher => {
                    const voucherCard = document.createElement('div');
                    voucherCard.className = 'voucher-card mb-3 p-3 border rounded';
                    voucherCard.innerHTML = `
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h6 class="mb-1 fw-bold text-primary">${voucher.tenVoucher} <small class="text-muted">(${voucher.maVoucher ?? ''})</small></h6>
                                <p class="mb-2 text-muted">Giảm ${voucher.phanTramGiam}%${voucher.giaTriGiamToiDa ? ` (tối đa ${voucher.giaTriGiamToiDa.toLocaleString()} VNĐ)` : ''}</p>
                                ${voucher.soTienApDungToiThieu ? `<small class="text-info">Áp dụng cho đơn từ ${voucher.soTienApDungToiThieu.toLocaleString()} VNĐ</small><br>` : ''}
                                <small class="text-success">Tiết kiệm: ${voucher.soTienGiam.toLocaleString()} VNĐ</small>
                            </div>
                            <button class="btn btn-primary btn-sm ms-3" onclick="selectVoucher('${voucher.voucherId}', '${voucher.tenVoucher}', '${voucher.maVoucher ?? ''}')">
                                Chọn
                            </button>
                        </div>
                    `;
                    container.appendChild(voucherCard);
                });

                container.style.display = 'block';
            }

            window.selectVoucher = function(voucherId, voucherName, voucherCode) {
                document.getElementById('voucherInput').value = voucherName;
                const sel = document.getElementById('selectedVoucherId');
                if (sel) sel.value = voucherId;
                const hidden = document.getElementById('voucherIdHidden');
                if (hidden) hidden.value = voucherId;
                selectedVoucherId = voucherId;
                if (voucherCode) {
                    document.getElementById('voucherInput').value = voucherCode;
                }

                closeVoucherModal();

                // Chuyển trang với voucherId để áp dụng ngay
                const url = new URL(window.location.href);
                url.searchParams.set('voucherId', voucherId);
                window.location.href = url.toString();
            };

            window.closeVoucherModal = function() {
                const modalEl = document.getElementById('voucherModal');
                const instance = (window.bootstrap && bootstrap.Modal) ? bootstrap.Modal.getInstance(modalEl) : null;
                if (instance) instance.hide();
                // Fallback
                modalEl.style.display='none';
                modalEl.classList.remove('show');
                modalEl.removeAttribute('aria-hidden');
            }

            // Hủy áp dụng voucher
            window.removeVoucher = function() {
                if (confirm('Bạn có chắc chắn muốn hủy áp dụng voucher này?')) {
                    // Xóa voucher khỏi các input hidden
                    const sel = document.getElementById('selectedVoucherId');
                    if (sel) sel.value = '';
                    const hidden = document.getElementById('voucherIdHidden');
                    if (hidden) hidden.value = '';
                    selectedVoucherId = null;

                    // Xóa voucherId khỏi URL và reload trang
                    const url = new URL(window.location.href);
                    if (url.searchParams.has('voucherId')) {
                        url.searchParams.delete('voucherId');
                        window.location.href = url.toString();
                    } else {
                        // Nếu không có voucherId trong URL, reload trang để reset
                        window.location.reload();
                    }
                }
            }

            // Bind hình thức thanh toán vào hidden
            const select = document.getElementById('paymentSelect');
            const hiddenPayment = document.getElementById('paymentIdHidden');
            if (select && hiddenPayment) {
                const sync = ()=> hiddenPayment.value = select.value;
                select.addEventListener('change', sync); sync();
            }

            // ✅ Validation form thanh toán
            const checkoutForm = document.getElementById('checkoutForm');
            if (checkoutForm) {
                checkoutForm.addEventListener('submit', function(e) {
                    const diaChiId = document.getElementById('diaChiIdHidden').value;
                    const diaChiId2 = document.getElementById('diaChiIdHidden_2').value;

                    // Validate Address
                    const guestAddress = document.querySelector("textarea[name='GuestAddress']");
                    
                    if (!guestAddress) {
                        // Logged in user validation (check address selection)
                        if (!diaChiId && !diaChiId2) {
                            e.preventDefault();
                            showBeautifulNotification('Vui lòng chọn địa chỉ giao hàng trước khi thanh toán!', 'error');
                            return false;
                        }
                    } else {
                        // Guest user validation (implicit by 'required' attribute, but explicit check here)
                        const name = document.querySelector("input[name='TenCuaKhachHang']").value;
                        const phone = document.querySelector("input[name='SdtCuaKhachHang']").value;
                         const email = document.querySelector("input[name='EmailCuaKhachHang']").value;
                        
                        if (!name || !phone || !email || !guestAddress.value) {
                             // Let browser handling required attribute take precedence, but if bypassed:
                             // e.preventDefault();
                             // showBeautifulNotification('Vui lòng điền đầy đủ thông tin giao hàng!', 'error');
                             // return false;
                        }
                    }

                    // Kiểm tra hình thức thanh toán
                    const hinhThucThanhToan = document.getElementById('paymentIdHidden').value;
                    if (!hinhThucThanhToan) {
                        e.preventDefault();
                        showBeautifulNotification('Vui lòng chọn hình thức thanh toán!', 'error');
                        return false;
                    }
                    
                    // ✅ Kiểm tra hình thức thanh toán có hợp lệ không
                    const allowedPaymentMethods = [
                        'aaaaaaaa-aaaa-aaaa-aaaa-aaaaaaaaaaaa', // Thanh toán khi nhận hàng
                        // 'bbbbbbbb-bbbb-bbbb-bbbb-bbbbbbbbbbbb'  Thanh toán VNPay
                    ];
                    
                    if (!allowedPaymentMethods.includes(hinhThucThanhToan)) {
                        e.preventDefault();
                        showBeautifulNotification('Chỉ hỗ trợ thanh toán khi nhận hàng hoặc thanh toán VNPay!', 'error');
                        return false;
                    }
                });
            }

            // ✅ Hàm tạo và quản lý tooltip tùy chỉnh
            function initCustomTooltips() {
                let tooltip = null;
                let timeout = null;

                // Tạo tooltip element
                function createTooltip() {
                    if (tooltip) return tooltip;
                    tooltip = document.createElement('div');
                    tooltip.className = 'custom-tooltip';
                    document.body.appendChild(tooltip);
                    return tooltip;
                }

                // Hiển thị tooltip
                function showTooltip(element, text) {
                    console.log('🔍 Showing tooltip for:', text); // Debug log
                    const tooltipEl = createTooltip();
                    tooltipEl.textContent = text;
                    tooltipEl.classList.add('show');

                    const rect = element.getBoundingClientRect();
                    const tooltipRect = tooltipEl.getBoundingClientRect();
                    
                    // Tính toán vị trí
                    let left = rect.left;
                    let top = rect.top - tooltipRect.height - 10;

                    // Kiểm tra nếu tooltip bị tràn ra ngoài màn hình
                    if (left + tooltipRect.width > window.innerWidth) {
                        left = window.innerWidth - tooltipRect.width - 10;
                    }
                    if (left < 10) left = 10;
                    if (top < 10) {
                        top = rect.bottom + 10;
                    }

                    tooltipEl.style.left = left + 'px';
                    tooltipEl.style.top = top + 'px';
                    
                    console.log('🔍 Tooltip positioned at:', left, top); // Debug log
                }

                // Ẩn tooltip
                function hideTooltip() {
                    if (tooltip) {
                        tooltip.classList.remove('show');
                    }
                }

                // Xử lý sự kiện cho các product title
                document.querySelectorAll('.product-title-container').forEach(container => {
                    const title = container.querySelector('.product-title');
                    if (!title) return;

                    const fullText = container.getAttribute('data-full-title');
                    
                    // Luôn hiển thị tooltip khi có fullText
                    if (fullText) {
                        container.addEventListener('mouseenter', () => {
                            clearTimeout(timeout);
                            timeout = setTimeout(() => {
                                showTooltip(container, fullText);
                            }, 300); // Delay 300ms
                        });

                        container.addEventListener('mouseleave', () => {
                            clearTimeout(timeout);
                            hideTooltip();
                        });
                    }
                });
            }

            // ✅ Hàm tự động điều chỉnh font size cho tên sản phẩm
            function adjustProductTitleFontSize() {
                const cartItems = document.querySelectorAll('.cart-item');
                
                cartItems.forEach(item => {
                    const title = item.querySelector('.product-title');
                    if (!title) return;
                    
                    const text = title.textContent || title.innerText;
                    const textLength = text.length;
                    
                    // Xóa class cũ
                    title.classList.remove('long-text', 'very-long-text');
                    item.classList.remove('compact');
                    
                    // Thêm class dựa trên độ dài text
                    if (textLength > 80) {
                        title.classList.add('very-long-text');
                        item.classList.add('compact'); // Ẩn thông tin phụ khi tên quá dài
                    } else if (textLength > 60) {
                        title.classList.add('very-long-text');
                    } else if (textLength > 40) {
                        title.classList.add('long-text');
                    }
                    
                    // Điều chỉnh font size động nếu cần
                    if (textLength > 100) {
                        title.style.fontSize = '0.45rem';
                    } else if (textLength > 80) {
                        title.style.fontSize = '0.5rem';
                    } else if (textLength > 60) {
                        title.style.fontSize = '0.6rem';
                    } else if (textLength > 40) {
                        title.style.fontSize = '0.7rem';
                    } else {
                        title.style.fontSize = '';
                    }
                });
            }

            // ✅ Hàm hiển thị thông báo đẹp
            function showBeautifulNotification(message, type = 'info') {
                // Xóa thông báo cũ nếu có
                const existingNotification = document.querySelector('.beautiful-notification');
                if (existingNotification) {
                    existingNotification.remove();
                }

                // Tạo thông báo mới
                const notification = document.createElement('div');
                notification.className = `beautiful-notification beautiful-notification-${type}`;

                const icon = type === 'error' ? '' : type === 'success' ? '✅' : 'ℹ️';
                const title = type === 'error' ? 'Lỗi' : type === 'success' ? 'Thành công' : 'Thông báo';

                notification.innerHTML = `
                    <div class="notification-header">
                        <span class="notification-icon">${icon}</span>
                        <span class="notification-title">${title}</span>
                        <button class="notification-close" onclick="this.parentElement.parentElement.remove()">×</button>
                    </div>
                    <div class="notification-body">
                        ${message}
                    </div>
                `;

                // Thêm vào body
                document.body.appendChild(notification);

                // Hiển thị với animation
                setTimeout(() => {
                    notification.classList.add('show');
                }, 10);

                // Tự động ẩn sau 5 giây (trừ khi là lỗi)
                if (type !== 'error') {
                    setTimeout(() => {
                        notification.classList.remove('show');
                        setTimeout(() => notification.remove(), 300);
                    }, 5000);
                }
            }
        });
