@{
    ViewData["Title"] = "Giày thể thao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- HERO -->

<section class="shoe-hero">
    <div class="shoe-hero-content">
        <h1>
            <span class="text-white">ShoesSport</span><br />
            <span class="text-orange">Giày Thể Thao Chính Hãng</span>
        </h1>
        <p>
            Phong cách – Bền bỉ – Hiệu suất cao.<br />
            Đồng hành cùng bạn trên mọi sân chơi.
        </p>

        <div class="hero-actions">
            <a href="#product-list" class="btn-primary">Mua sắm ngay</a>
            <a href="/" class="btn-outline">Về ShoesSport</a>
        </div>
    </div>
</section>


<!-- FILTER -->
<section class="max-w-7xl mx-auto px-6 mt-10">
    <div class="bg-white rounded-2xl shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Bộ lọc sản phẩm</h2>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <input type="text"
                   placeholder="Nhập tên giày..."
                   class="border rounded-lg px-4 py-2 w-full" />

            <select class="border rounded-lg px-4 py-2 w-full">
                <option>Tất cả thương hiệu</option>
                <option>Nike</option>
                <option>Adidas</option>
                <option>Puma</option>
                <option>New Balance</option>
            </select>

            <select class="border rounded-lg px-4 py-2 w-full">
                <option>Khoảng giá</option>
                <option>Dưới 1.000.000₫</option>
                <option>1.000.000₫ – 2.000.000₫</option>
                <option>Trên 2.000.000₫</option>
            </select>

            <select class="border rounded-lg px-4 py-2 w-full">
                <option>Sắp xếp</option>
                <option>Giá tăng dần</option>
                <option>Giá giảm dần</option>
                <option>Mới nhất</option>
            </select>
        </div>
    </div>
</section>

<!-- PRODUCT GRID -->
<section class="max-w-7xl mx-auto px-6 mt-12 mb-20">
    <h2 class="text-2xl font-bold mb-6">Danh sách giày</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">

        <!-- ITEM -->
        <div class="bg-white rounded-xl shadow hover:shadow-lg transition">
            <img src="https://via.placeholder.com/400x300"
                 class="rounded-t-xl w-full h-48 object-cover" />
            <div class="p-4">
                <h3 class="font-semibold text-lg">Nike Air Force 1</h3>
                <p class="text-gray-500 text-sm mb-2">Nike</p>
                <p class="text-red-600 font-bold text-lg mb-3">2.500.000₫</p>
                <a href="#"
                   class="block text-center bg-black text-white py-2 rounded-lg hover:bg-gray-800">
                    Xem chi tiết
                </a>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow hover:shadow-lg transition">
            <img src="https://via.placeholder.com/400x300"
                 class="rounded-t-xl w-full h-48 object-cover" />
            <div class="p-4">
                <h3 class="font-semibold text-lg">Adidas Ultraboost</h3>
                <p class="text-gray-500 text-sm mb-2">Adidas</p>
                <p class="text-red-600 font-bold text-lg mb-3">3.200.000₫</p>
                <a href="#"
                   class="block text-center bg-black text-white py-2 rounded-lg hover:bg-gray-800">
                    Xem chi tiết
                </a>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow hover:shadow-lg transition">
            <img src="https://via.placeholder.com/400x300"
                 class="rounded-t-xl w-full h-48 object-cover" />
            <div class="p-4">
                <h3 class="font-semibold text-lg">Puma RS-X</h3>
                <p class="text-gray-500 text-sm mb-2">Puma</p>
                <p class="text-red-600 font-bold text-lg mb-3">1.900.000₫</p>
                <a href="#"
                   class="block text-center bg-black text-white py-2 rounded-lg hover:bg-gray-800">
                    Xem chi tiết
                </a>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow hover:shadow-lg transition">
            <img src="https://via.placeholder.com/400x300"
                 class="rounded-t-xl w-full h-48 object-cover" />
            <div class="p-4">
                <h3 class="font-semibold text-lg">New Balance 550</h3>
                <p class="text-gray-500 text-sm mb-2">New Balance</p>
                <p class="text-red-600 font-bold text-lg mb-3">2.200.000₫</p>
                <a href="#"
                   class="block text-center bg-black text-white py-2 rounded-lg hover:bg-gray-800">
                    Xem chi tiết
                </a>
            </div>
        </div>

    </div>
    <style>
        .shoe-hero {
            min-height: 420px;
            background: radial-gradient(circle at top left, #1f2933, #020617);
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 60px 20px;
        }

        .shoe-hero-content {
            max-width: 900px;
        }

        .shoe-hero h1 {
            font-size: 48px;
            font-weight: 800;
            line-height: 1.2;
            margin-bottom: 20px;
        }

        .text-white {
            color: #ffffff;
        }

        .text-orange {
            background: linear-gradient(135deg, #fb923c, #f97316, #ef4444);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .shoe-hero p {
            color: #cbd5e1;
            font-size: 18px;
            margin-bottom: 32px;
        }

        .hero-actions {
            display: flex;
            justify-content: center;
            gap: 16px;
            flex-wrap: wrap;
        }

        .btn-primary {
            background: #ffffff;
            color: #020617;
            padding: 12px 26px;
            border-radius: 999px;
            font-weight: 600;
            text-decoration: none;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background: #f97316;
                color: #fff;
            }

        .btn-outline {
            border: 1px solid #475569;
            color: #e5e7eb;
            padding: 12px 26px;
            border-radius: 999px;
            text-decoration: none;
            transition: 0.3s;
        }

            .btn-outline:hover {
                border-color: #f97316;
                color: #f97316;
            }
    </style>

</section>
