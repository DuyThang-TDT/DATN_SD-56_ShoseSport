@model FurryFriends.Web.ViewModels.PhieuHoanTraCreateRequest
@using FurryFriends.API.Models
@{
    ViewData["Title"] = "Yêu cầu hoàn trả";
    var ct = ViewBag.HoaDonChiTiet as HoaDonChiTiet;
}

<div class="container py-4">
    <!-- Header Section -->
    <div class="return-header mb-4">
        <div class="d-flex align-items-center gap-3 mb-3">
            <div class="return-icon">
                <i class="fas fa-undo-alt"></i>
            </div>
            <div>
                <h1 class="mb-1">Yêu cầu hoàn trả</h1>
                <p class="text-muted mb-0">Gửi yêu cầu hoàn trả hoặc đổi sản phẩm</p>
            </div>
        </div>
        <div class="progress-steps">
            <div class="step active">
                <div class="step-number">1</div>
                <span>Chọn sản phẩm</span>
            </div>
            <div class="step-line"></div>
            <div class="step">
                <div class="step-number">2</div>
                <span>Điền thông tin</span>
            </div>
            <div class="step-line"></div>
            <div class="step">
                <div class="step-number">3</div>
                <span>Xác nhận</span>
            </div>
        </div>
    </div>

    @if (ct != null)
    {
        <!-- Product Information Card -->
        <div class="product-card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-box-open me-2"></i>Thông tin sản phẩm</h5>
            </div>
            <div class="card-body">
                <div class="product-info">
                    <div class="product-image">
                        @if (!string.IsNullOrEmpty(ct.AnhSanPhamLucMua))
                        {
                            <img src="@ct.AnhSanPhamLucMua" alt="@ct.TenSanPhamLucMua" />
                        }
                        else 
                        { 
                            <div class="no-image">
                                <i class="fas fa-image"></i>
                            </div>
                        }
                    </div>
                    <div class="product-details">
                        <h6 class="product-name">@ct.TenSanPhamLucMua</h6>
                        <div class="product-meta">
                            @if (!string.IsNullOrWhiteSpace(ct.MauSacLucMua) || !string.IsNullOrWhiteSpace(ct.KichCoLucMua))
                            {
                                <span class="badge bg-light text-dark me-2">
                                    <i class="fas fa-palette me-1"></i>@ct.MauSacLucMua
                                </span>
                                <span class="badge bg-light text-dark me-2">
                                    <i class="fas fa-ruler me-1"></i>Size @ct.KichCoLucMua
                                </span>
                            }
                            <span class="badge bg-primary">
                                <i class="fas fa-shopping-cart me-1"></i>@ct.SoLuongSanPham
                            </span>
                        </div>
                        @if (ct.GiaLucMua != null)
                        {
                            <div class="product-price">
                                <span class="price">@ct.GiaLucMua?.ToString("n0") ₫</span>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(ct.MoTaSanPhamLucMua))
                        {
                            <p class="product-description">@ct.MoTaSanPhamLucMua</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Return Form -->
    <div class="return-form-card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Thông tin hoàn trả</h5>
        </div>
        <form asp-action="Create" method="post" asp-route-hoaDonId="@ViewBag.HoaDonId">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <input type="hidden" asp-for="HoaDonChiTietId" />

                <!-- Quantity Section -->
                <div class="form-section mb-4">
                    <label asp-for="SoLuongHoan" class="form-label">
                        <i class="fas fa-sort-numeric-up me-2"></i>Số lượng muốn hoàn trả
                    </label>
                    <div class="quantity-input-group">
                        @if (ct != null)
                        {
                            <input asp-for="SoLuongHoan" class="form-control form-control-lg quantity-input"
                                   min="1" max="@ct.SoLuongSanPham" type="number" />
                        }
                        else
                        {
                            <input asp-for="SoLuongHoan" class="form-control form-control-lg quantity-input"
                                   min="1" type="number" />
                        }
                        <div class="quantity-info">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Tối đa: @(ct?.SoLuongSanPham ?? 1) sản phẩm
                            </small>
                        </div>
                    </div>
                <span asp-validation-for="SoLuongHoan" class="text-danger"></span>
            </div>

                <!-- Reason Section -->
                <div class="form-section mb-4">
                    <label asp-for="LyDoHoanTra" class="form-label">
                        <i class="fas fa-comment-alt me-2"></i>Lý do hoàn trả
                    </label>
                    <div class="reason-options mb-3">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="Không vừa size">
                                    <i class="fas fa-ruler"></i>
                                    <span>Không vừa size</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="Lỗi kỹ thuật">
                                    <i class="fas fa-tools"></i>
                                    <span>Lỗi kỹ thuật</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="Giao nhầm màu">
                                    <i class="fas fa-palette"></i>
                                    <span>Giao nhầm màu</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="Không đúng mô tả">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <span>Không đúng mô tả</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <textarea asp-for="LyDoHoanTra" class="form-control reason-textarea" rows="4"
                              placeholder="Mô tả chi tiết lý do hoàn trả..."></textarea>
                <span asp-validation-for="LyDoHoanTra" class="text-danger"></span>
                </div>

                <!-- Return Policy Notice -->
                <div class="policy-notice">
                    <div class="alert alert-info">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-info-circle me-3 mt-1"></i>
                            <div>
                                <h6 class="alert-heading">Chính sách hoàn trả</h6>
                                <ul class="mb-0">
                                    <li>Sản phẩm phải còn nguyên vẹn, chưa sử dụng</li>
                                    <li>Giữ nguyên tag, tem và bao bì gốc</li>
                                    <li>Thời gian xử lý: 3-5 ngày làm việc</li>
                                    <li>Phí vận chuyển hoàn trả: Khách hàng chịu</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="card-footer">
                <div class="d-flex gap-3 justify-content-between">
                    <a asp-controller="KhachHang" asp-action="LichSuDonHang" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại đơn hàng
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-paper-plane me-2"></i>Gửi yêu cầu hoàn trả
                    </button>
        </div>
        </div>
    </form>
    </div>
</div>

@section Styles {
<style>
    /* Header Styles */
    .return-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        position: relative;
        overflow: hidden;
    }

    .return-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }

    .return-icon {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    /* Progress Steps */
    .progress-steps {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 2rem;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: rgba(255, 255, 255, 0.7);
    }

    .step.active {
        color: white;
    }

    .step-number {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .step.active .step-number {
        background: white;
        color: #667eea;
    }

    .step-line {
        width: 60px;
        height: 2px;
        background: rgba(255, 255, 255, 0.3);
        margin: 0 1rem;
    }

    /* Product Card */
    .product-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .product-card .card-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-bottom: 1px solid #dee2e6;
        padding: 1rem 1.5rem;
    }

    .product-info {
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
    }

    .product-image {
        width: 120px;
        height: 120px;
        border-radius: 12px;
        overflow: hidden;
        flex-shrink: 0;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .no-image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #adb5bd;
    }

    .product-details {
        flex: 1;
    }

    .product-name {
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #2c3e50;
    }

    .product-meta {
        margin-bottom: 0.75rem;
    }

    .product-price {
        margin-bottom: 0.75rem;
    }

    .price {
        font-size: 1.1rem;
        font-weight: 600;
        color: #e74c3c;
    }

    .product-description {
        font-size: 0.9rem;
        color: #6c757d;
        margin: 0;
        line-height: 1.5;
    }

    /* Return Form Card */
    .return-form-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .return-form-card .card-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        border: none;
        padding: 1rem 1.5rem;
    }

    .form-section {
        position: relative;
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.75rem;
    }

    .quantity-input-group {
        position: relative;
    }

    .quantity-input {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }

    .quantity-input:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    .quantity-info {
        margin-top: 0.5rem;
    }

    /* Reason Options */
    .reason-options {
        margin-bottom: 1rem;
    }

    .reason-option {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 0.75rem;
    }

    .reason-option:hover {
        border-color: #28a745;
        background-color: #f8fff9;
    }

    .reason-option.selected {
        border-color: #28a745;
        background-color: #d4edda;
        color: #155724;
    }

    .reason-option i {
        font-size: 1.2rem;
        width: 20px;
        text-align: center;
    }

    .reason-textarea {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
        resize: vertical;
    }

    .reason-textarea:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    /* Policy Notice */
    .policy-notice {
        margin-top: 2rem;
    }

    .policy-notice .alert {
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
    }

    .policy-notice ul {
        padding-left: 1.2rem;
    }

    .policy-notice li {
        margin-bottom: 0.25rem;
    }

    /* Card Footer */
    .card-footer {
        background: #f8f9fa;
        border-top: 1px solid #dee2e6;
        padding: 1.5rem;
    }

    .btn {
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        padding: 0.75rem 2rem;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .btn-outline-secondary {
        border: 2px solid #6c757d;
        color: #6c757d;
        padding: 0.75rem 2rem;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        border-color: #6c757d;
        transform: translateY(-2px);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .product-info {
            flex-direction: column;
            text-align: center;
        }

        .product-image {
            align-self: center;
        }

        .progress-steps {
            flex-direction: column;
            gap: 1rem;
        }

        .step-line {
            width: 2px;
            height: 30px;
        }

        .card-footer .d-flex {
            flex-direction: column;
            gap: 1rem;
        }

        .btn {
            width: 100%;
        }
    }
</style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Reason option selection
        document.querySelectorAll('.reason-option').forEach(option => {
            option.addEventListener('click', function() {
                // Remove selected class from all options
                document.querySelectorAll('.reason-option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                
                // Add selected class to clicked option
                this.classList.add('selected');
                
                // Set the reason text to textarea
                const reason = this.getAttribute('data-reason');
                const textarea = document.querySelector('.reason-textarea');
                textarea.value = reason;
            });
        });

        // Auto-focus on quantity input
        document.addEventListener('DOMContentLoaded', function() {
            const quantityInput = document.querySelector('.quantity-input');
            if (quantityInput) {
                quantityInput.focus();
            }
        });

        // Form validation enhancement
        document.querySelector('form').addEventListener('submit', function(e) {
            const quantity = document.querySelector('.quantity-input').value;
            const reason = document.querySelector('.reason-textarea').value;
            
            if (!reason.trim()) {
                e.preventDefault();
                alert('Vui lòng nhập lý do hoàn trả');
                document.querySelector('.reason-textarea').focus();
                return false;
            }
            
            if (quantity < 1) {
                e.preventDefault();
                alert('Số lượng phải lớn hơn 0');
                document.querySelector('.quantity-input').focus();
                return false;
            }
        });
    </script>
}
