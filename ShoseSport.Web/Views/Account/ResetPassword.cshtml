@model FurryFriends.Web.ViewModels.ResetPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FuryFriend - Đặt Lại Mật Khẩu</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/css/dangkystyle.css" rel="stylesheet" />
    <style>
        .password-field {
            position: relative;
        }
        .password-toggle-icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #666;
            z-index: 10;
        }
        .password-toggle-icon:hover {
            color: #333;
        }
        .form-control {
            padding-right: 40px;
        }
    </style>
</head>
<body>
    <div class="bg-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="signup-container">
        <div class="logo-section">
            <div class="logo">FuryFriend</div>
            <div class="subtitle">Đặt Lại Mật Khẩu</div>
        </div>
        <center><div class="welcome-text">Xác nhận mã và tạo mật khẩu mới</div></center>
        
        <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 20px; text-align: center;">
            <p style="margin: 0; color: #666;">
                <strong>Email:</strong> @Model.Email<br>
                <small>Mã xác nhận đã được gửi đến email này</small>
            </p>
        </div>

        <form asp-action="ResetPassword" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="Email" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="form-notification error" style="@(ViewData.ModelState.IsValid ? "display:none;" : "")"></div>

            <div class="form-group">
                <label asp-for="Code">Mã Xác Nhận</label>
                <input asp-for="Code" class="form-control" placeholder="Nhập mã 6 số từ email" maxlength="6" style="text-align: center; font-size: 18px; letter-spacing: 2px;" />
                <span asp-validation-for="Code" class="field-validation-error"></span>
            </div>

            <div class="form-group password-field">
                <label asp-for="NewPassword">Mật Khẩu Mới</label>
                <input asp-for="NewPassword" class="form-control" type="password" placeholder="Tối thiểu 6 ký tự" />
                <i class="bi bi-eye password-toggle-icon" onclick="togglePassword1()"></i>
                <span asp-validation-for="NewPassword" class="field-validation-error"></span>
            </div>

            <div class="form-group password-field">
                <label asp-for="ConfirmPassword">Xác Nhận Mật Khẩu</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu mới" />
                <i class="bi bi-eye password-toggle-icon" onclick="togglePassword2()"></i>
                <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
            </div>

            <button type="submit" class="signup-btn">
                <i class="bi bi-check-circle"></i> Đặt Lại Mật Khẩu
            </button>
        </form>

        <div class="login-link">
            <a asp-controller="KhachHangLogin" asp-action="DangNhap">
                <i class="bi bi-arrow-left"></i> Quay về trang Đăng nhập
            </a>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function togglePassword1() {
            const passwordInput = document.getElementById('NewPassword');
            const toggleIcon = event.target;
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'bi bi-eye-slash password-toggle-icon';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'bi bi-eye password-toggle-icon';
            }
        }

        function togglePassword2() {
            const passwordInput = document.getElementById('ConfirmPassword');
            const toggleIcon = event.target;
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'bi bi-eye-slash password-toggle-icon';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'bi bi-eye password-toggle-icon';
            }
        }

        // Auto-focus vào ô mã xác nhận
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('Code').focus();
        });
    </script>
</body>
</html>