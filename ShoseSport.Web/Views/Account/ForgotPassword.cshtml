@model FurryFriends.Web.ViewModels.ForgotPasswordViewModel
@{
    Layout = null; // Không sử dụng layout chung
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FuryFriend - Quên Mật Khẩu</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/css/dangkystyle.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="signup-container">
        <div class="logo-section">
            <div class="logo">FuryFriend</div>
            <div class="subtitle">Đặt Lại Mật Khẩu</div>
        </div>
        <center><div class="welcome-text">Khôi phục tài khoản của bạn</div></center>
        <p style="text-align:center; color:#888; margin-bottom: 20px;">Nhập email của bạn và chúng tôi sẽ gửi mã xác nhận để đặt lại mật khẩu.</p>

        <form asp-action="ForgotPassword" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="form-notification error" style="@(ViewData.ModelState.IsValid ? "display:none;" : "")"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>

            <button type="submit" class="signup-btn">
                Gửi mã xác nhận
            </button>
        </form>

        <div class="login-link">
            Nhớ mật khẩu rồi? <a asp-controller="KhachHangLogin" asp-action="DangNhap">Đăng nhập ngay</a>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>