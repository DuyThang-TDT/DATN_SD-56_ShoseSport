@model FurryFriends.API.Models.Voucher
@{
    ViewData["Title"] = "Thêm khuyến mãi mới";
}
<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
</div>
<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý khuyến mãi</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>
</nav>
<div class="form-container" style="margin-left: 10px; margin-right: 40px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex align-items-center">
                <div class="card-icon primary me-3">
                    <i class="fas fa-plus"></i>
                </div>
                <div>
                    <h5 class="card-title mb-0">Thông tin khuyến mãi</h5>
                    <small class="text-muted">Nhập thông tin để tạo khuyến mãi mới</small>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post" id="createForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;"></div>
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MaVoucher" class="form-label fw-semibold">
                                <i class="fas fa-barcode me-2 text-primary"></i>Mã voucher
                            </label>
                            <input asp-for="MaVoucher" class="form-control form-control-lg" placeholder="Ví dụ: WELCOME20" />
                            <small class="text-muted">Mã sẽ được chuẩn hóa thành chữ in hoa</small>
                            <span asp-validation-for="MaVoucher" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TenVoucher" class="form-label fw-semibold">
                                <i class="fas fa-ticket-alt me-2 text-primary"></i>Tên khuyến mãi
                            </label>
                            <input asp-for="TenVoucher" class="form-control form-control-lg" placeholder="Nhập tên khuyến mãi" />
                            <span asp-validation-for="TenVoucher" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhanTramGiam" class="form-label fw-semibold">
                                <i class="fas fa-percentage me-2 text-primary"></i>Phần trăm giảm giá
                            </label>
                            <input asp-for="PhanTramGiam" class="form-control form-control-lg" placeholder="Nhập phần trăm giảm giá" />
                            <span asp-validation-for="PhanTramGiam" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="GiaTriGiamToiDa" class="form-label fw-semibold">
                                <i class="fas fa-money-bill-wave me-2 text-primary"></i>Giá trị giảm tối đa (VNĐ)
                            </label>
                            <input asp-for="GiaTriGiamToiDa" class="form-control form-control-lg" placeholder="Để trống = không giới hạn" />
                            <span asp-validation-for="GiaTriGiamToiDa" class="text-danger small"></span>
                            <small class="form-text text-muted">Số tiền giảm tối đa có thể áp dụng</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SoTienApDungToiThieu" class="form-label fw-semibold">
                                <i class="fas fa-shopping-cart me-2 text-primary"></i>Số tiền áp dụng tối thiểu (VNĐ)
                            </label>
                            <input asp-for="SoTienApDungToiThieu" class="form-control form-control-lg" placeholder="Để trống = không yêu cầu" />
                            <span asp-validation-for="SoTienApDungToiThieu" class="text-danger small"></span>
                            <small class="form-text text-muted">Giá trị đơn hàng tối thiểu để áp dụng khuyến mãi</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NgayBatDau" class="form-label fw-semibold">
                                <i class="fas fa-calendar-plus me-2 text-primary"></i>Ngày bắt đầu
                            </label>
                            <input asp-for="NgayBatDau" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="NgayBatDau" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NgayKetThuc" class="form-label fw-semibold">
                                <i class="fas fa-calendar-minus me-2 text-primary"></i>Ngày kết thúc
                            </label>
                            <input asp-for="NgayKetThuc" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="NgayKetThuc" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SoLuong" class="form-label fw-semibold">
                                <i class="fas fa-sort-numeric-up me-2 text-primary"></i>Số lượng
                            </label>
                            <input asp-for="SoLuong" class="form-control form-control-lg" placeholder="Nhập số lượng" />
                            <span asp-validation-for="SoLuong" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TrangThai" class="form-label fw-semibold">
                                <i class="fas fa-toggle-on me-2 text-primary"></i>Trạng thái
                            </label>
                            <select asp-for="TrangThai" class="form-control form-control-lg">
                                <option value="1">Hoạt động</option>
                                <option value="0">Không hoạt động</option>
                            </select>
                            <span asp-validation-for="TrangThai" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top">
                    <a asp-action="Index" class="btn btn-light btn-lg px-4">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-save me-2"></i>Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#createForm').on('submit', function(e) {
                if ($(this).valid()) {
                    return true;
                }
            });
        });
    </script>
} 